<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Season Stats</title>
</head>
<body>
    <p class="ball">üèà</p>

<div style = "border: 1">
    <fieldset>
        <h1>Current Season Stats</h1> <br>
        <strong>Name: </strong> <%- name %> <br>
        <strong>TDs: </strong> <%- tds %> <br>
        <strong>Rush Yards: </strong> <%- rushyards %> <br>
        <strong>Pass Yards:</strong> <%- passyards %>
    </fieldset>
</div>
    <a id="home" href="/">HOME üè†</a>
</body>
</html>

<style>

label{
        color: white;
    }
    fieldset {
    background-color: rgb(173, 173, 173);
    box-shadow: 10px 5px 5px rgb(189, 75, 49);
    border-radius: 4px;
    border: none;
    padding: 20px;           
    width: 80%;              
    max-width: 500px;        
    margin: auto; 
    color: white; /* Ensures all text inside fieldset is white */
}

h1, strong {
    color: white; /* Explicitly ensuring headers and strong tags are white */
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
}

body {
    background-color: rgb(33, 33, 33);
    display: flex;
    justify-content: center;  
    align-items: center;     
    min-height: 100vh;       
    margin: 0;                
}

input[type="text"], input[type="number"], input[type="submit"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    color: black; /* Ensures input text is black for visibility */
    background: white; /* Ensures input background is white for visibility */
}

input[type="submit"] {
    background-color: rgb(189, 75, 49);
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;        
}

input[type="submit"]:hover {
    background-color: rgb(134, 53, 34);
}

a#home {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    text-decoration: none;
    font-size: 24px;
    padding: 10px 20px;
    background: rgba(189, 75, 49, 0.8);
    border-radius: 4px;
}

a#home:hover {
    background-color: rgb(134, 53, 34);
}

p.ball {
    z-index: -1000000;
    position: absolute;
    font-size: 50px;
    animation: moveBall 3s infinite linear;
}
@keyframes moveBall {
    0%, 100% {
        transform: translate(-50%, -50%) translateY(0) translateX(0);
    }
    25% {
        transform: translate(-50%, -50%) translateY(-10px) translateX(10px);
    }
    50% {
        transform: translate(-50%, -50%) translateY(0) translateX(0);
    }
    75% {
        transform: translate(-50%, -50%) translateY(10px) translateX(-10px);
    }
}
</style>

<script>

    let pTag = document.querySelector("p.ball");

    let x = Math.floor(Math.random() * window.innerWidth);
    let y = Math.floor(Math.random() * window.innerHeight);
    let vx = Math.random() * 2 - 1; 
    let vy = Math.random() * 2 - 1; 
    let radius = 20;

    move();

    function move() {
        if (x + radius >= window.innerWidth || x - radius <= 0) {
            vx = Math.random() * 2 - 1; 
            vy = Math.random() * 2 - 1;
        }

        if (y + radius >= window.innerHeight || y - radius <= 0) {
            vx = Math.random() * 2 - 1; 
            vy = Math.random() * 2 - 1;
        }

        x += vx;
        y += vy;

        pTag.style.left = x + 'px';
        pTag.style.top = y + 'px';

        requestAnimationFrame(move); 
    }
</script>

   
</style>
